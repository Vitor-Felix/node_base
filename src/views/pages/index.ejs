  </div>
</div>

<!-- First Grid -->
<div id ="formulario" class="w3-row-padding w3-padding-64 w3-container">
  <div >
    <div>
      <h1 style="text-align: center">Formulário de Participação</h1>
  
      <form action="/register" enctype="multipart/form-data" method="POST">
        <label for="fname">Nome Completo</label>
        <input type="text" id="fname" name="fullname" >
    
        <label for="lname">CPF</label>
        <input type="text" id="lname" name="cpf" >
  
        <label for="lname">Número SUS</label>
        <input type="text" id="numSUS" name="SUSnumber" >


        <label for="fileUpload">Envie a foto da sua Carteira de Vacinação</label> </div>
        <input style="margin: 10px 0px " type="file" name="image" id="fileToUpload">
